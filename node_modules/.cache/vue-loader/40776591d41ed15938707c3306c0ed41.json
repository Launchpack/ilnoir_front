\n\r\n        return deco;\r\n      },\r\n      clickSido(item) {\r\n        // 시군구 데이터 가져오기\r\n        this.$axios.get(`public/address/${this.type}/sido/${item.id}/sigungu`)\r\n          .then(res => {\r\n            if ( res.status === 200 ) {\r\n              this.sigungu = res.data;\r\n              this.selectedSido = item;\r\n              this.selectedSigungu = {};\r\n            }\r\n          })\r\n          .catch(err => {\r\n            console.log(err);\r\n          })\r\n      },\r\n      clickSigungu(item) {\r\n        this.selectedSigungu = item;\r\n        this.$emit('selectedRegion', {\r\n          sido: this.selectedSido,\r\n          sigungu: this.selectedSigungu\r\n        });\r\n      },\r\n      overSido(item) {\r\n        this.hoverSido = item;\r\n      },\r\n      leaveSido() {\r\n        this.hoverSido = {};\r\n      },\r\n      overSigungu(item) {\r\n        this.hoverSigungu = item;\r\n      },\r\n      leaveSigungu() {\r\n        this.hoverSigungu = {};\r\n      },\r\n    }\r\n  }\r\n</script>\r\n\r\n<style lang=\"stylus\" type=\"stylus\" scoped>\r\n\r\n  .sort-header\r\n    .result-content\r\n      display flex\r\n      max-height 640px\r\n\r\n    .sort-sido\r\n    .sort-sigungu\r\n    .result-sido-wrap\r\n    .result-sigungu-wrap\r\n      width 50%\r\n\r\n    .sort-sido\r\n    .sort-sigungu\r\n      padding 12px 16px\r\n      font-weight bold\r\n    // color #303841  //text\r\n    // background #f9f9f9  //point\r\n\r\n    .result-sido-wrap\r\n    .result-sigungu-wrap\r\n      width 50%\r\n      overflow-x hidden\r\n    // border-right 1px solid #f9f9f9  //point\r\n\r\n    .result-sido\r\n    .result-sigungu\r\n      width calc(100% + 17px)\r\n      height 100%\r\n      overflow-y scroll\r\n\r\n    .sido-item\r\n      padding 12px 32px\r\n      // color #81868b  //text\r\n      // border-bottom 1px solid #f9f9f9  //point\r\n      cursor pointer\r\n\r\n    .sigungu-item\r\n      padding 12px 32px\r\n      // color #81868b  //text\r\n     