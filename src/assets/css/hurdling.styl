// 문의 내용
.p-inquiry-main
.p-review-main
  font-size 16px
  margin-bottom 12px
  // 문의 작성자, 날짜 등
.p-inquiry-sub
.p-review-sub
  font-size 14px
// 답변상태
.p-inquiry-state
.p-review-state
  font-size 14px
  margin-bottom 6px

