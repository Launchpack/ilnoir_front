.empty-view
  padding 80px 0
  font-size 14px
  text-align center


.p-pc-title
.p-pc-modal-title
  font-size 20px
  font-weight 600
  text-align center

.p-pc-title
  margin 40px 0 32px

.p-pc-modal-title
  margin-bottom 32px


// 새글 표시용 점
.dot-new
  background-color #FF5D5D
  width 4px
  height 4px
  border-radius 100%